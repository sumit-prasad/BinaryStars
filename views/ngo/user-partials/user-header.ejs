<!DOCTYPE html>
<class ="no-js" lang="en"></class>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= user.firstName %>'s Dashboard</title>
  <!-- Bootstrap CSS -->
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
  />
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Cinzel&family=Quicksand&display=swap"
    rel="stylesheet"
  />
  <!-- Bootstrap Icons -->
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css"
  />
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/user-styles.css" type="text/css" />
  <!-- Javascript graceful degradation -->
  <script>
    (function (e, t, n) {
      var r = e.querySelectorAll("html")[0];
      r.className = r.className.replace(/(^|s)no-js(s|$)/, "$1js$2");
    })(document, window, 0);
  </script>
</head>
<body>
  <div class="container py-3">
    <nav class="">
      <div
        class="d-flex flex-column flex-md-row align-items-center pb-3 mb-4 border-bottom"
      >
        <a
          href="/ngo/<%= user.username %>/dashboard"
          class="d-flex align-items-center text-dark text-decoration-none"
        >
          <span class="display-6 pb-3"><%= user.ngoName %></span>
        </a>

        <nav class="d-inline-flex mt-2 mt-md-0 ms-md-auto">
          <a
            class="me-4 py-2 text-dark text-decoration-none"
            href="/ngo/<%= user.username %>/dashboard"
            >Dashboard</a
          >
          <a
            class="me-4 py-2 text-dark text-decoration-none"
            href="/ngo/<%= user.username %>/profile"
            >Profile</a
          >
          <a
            class="me-4 py-2 text-dark text-decoration-none"
            href="/ngo/<%= user.username %>/all-ngos"
            >NGOs</a
          >
          <a
            class="me-4 py-2 text-dark text-decoration-none"
            href="/ngo/<%= user.username %>/ngo/events"
            >Events</a
          >
          <a
            class="me-4 py-2 text-dark text-decoration-none"
            href="/ngo/<%= user.ngoName %>/logout"
            >Logout</a
          >
        </nav>
      </div>
    </nav>
  </div>
